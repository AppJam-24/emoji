<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_gravity="start"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/ai_chat"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:background="@drawable/ai_chat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:maxWidth="200dp"
            android:fontFamily="@font/t_f"
            android:id="@+id/ai_chat_text"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="17dp"
            android:text="안녕하세요.\n오늘의 감정을 확인 하시겠습니까?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/camera_button"
            android:visibility="gone"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="12dp"
            android:layout_marginHorizontal="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/t_f"
                android:id="@+id/button_text"
                android:textSize="13sp"
                android:layout_marginVertical="6dp"
                android:layout_gravity="center"
                android:text="사진찍기"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/my_chat"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_marginEnd="30dp"
        android:background="@drawable/my_chat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:fontFamily="@font/t_f"
            android:id="@+id/my_chat_text"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="17dp"
            android:text="안녕하세요.\n오늘의 감정을 확인 하시겠습니까?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>